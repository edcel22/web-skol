@import 'global'

.page_content
	padding: 30px
	h2
		font-family: 'p-regular'
	section
		&.technologies
			.items
				display: flex
				flex-flow: row wrap
				a,
				p
					font-family: 'p-regular'
				.item
					flex: 0 0 calc(25% - 20px)
					margin: 0 10px
					margin-bottom: 30px
					box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
					border-radius: 10px
					overflow: hidden
					.top
						position: relative
						.overlay
							position: absolute
							top: 0
							bottom: 0
							left: 0
							right: 0
							display: flex
							justify-content: space-evenly
							width: 100%
							height: 100%
							max-height: 0
							overflow-y: hidden
							transition-property: all
							transition-duration: .5s
							transition-timing-function: cubic-bezier(0, 1, 0.5, 1)
							.left,
							.right
								flex: 0 0 50%
								display: flex
								align-items: center
								justify-content: center
								background-color: #3bb78f
								background-image: linear-gradient(315deg, #3bb78f 0%, #0bab64 74%)
								a
									color: white
						&:hover
							.overlay
								max-height: 100%
								overflow-y: visible
						img
							width: 100%
					.bottom
						padding: 20px